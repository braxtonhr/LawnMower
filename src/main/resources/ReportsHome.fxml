<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.lawnmower.control.ReportingController">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <GridPane prefHeight="600"
              alignment="CENTER"
              hgap="8"
              vgap="8">

        <Label text="Reporting"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0">
            <font>
                <Font name="Arial Black" size="24.0" />
            </font>

        </Label>

        <Button
                text="Enter Service Reports"
                prefHeight="20"
                prefWidth="400"
                GridPane.columnIndex="0"
                GridPane.rowIndex="1"
                onAction="#inputServiceReport">
        </Button>

        <Button
                text="View Service Reports"
                prefHeight="20"
                prefWidth="400"
                GridPane.columnIndex="0"
                GridPane.rowIndex="2">
        </Button>

        <Button
                text="Generate Invoices"
                prefHeight="20"
                prefWidth="400"
                GridPane.columnIndex="0"
                GridPane.rowIndex="3">
        </Button>

        <Button
                text="View Invoices"
                prefHeight="20"
                prefWidth="400"
                GridPane.columnIndex="0"
                GridPane.rowIndex="4">
        </Button>

        <Button
                text="Generate Weekly Assignments"
                prefHeight="20"
                prefWidth="400"
                GridPane.columnIndex="0"
                GridPane.rowIndex="5">
        </Button>

    </GridPane>

    <Button
            text="back"
            alignment="BOTTOM_LEFT"
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            onAction="#onPressBack"/>

</VBox>